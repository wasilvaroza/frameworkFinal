<p id="notice"><%= notice %></p>

<h1>Participantes Cadastrados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>RG</th>
      <th>Data de Nascimento</th>
      <th>Email</th>
      <th>Formacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participantes.each do |participante| %>
      <tr>
        <td><%= participante.nome %></td>
        <td><%= participante.rg %></td>
        <td><%= participante.dataNasc %></td>
        <td><%= participante.email %></td>
        <td><%= participante.formacao %></td>
        <td> <%= link_to ' ', edit_participante_path(participante), class: "glyphicon glyphicon-pencil" %>
<%= link_to ' ', participante, method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' } , class: "glyphicon glyphicon-trash" %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

