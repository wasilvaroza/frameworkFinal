      <td> <%= link_to ' ', edit_participante_path(participante), class: "glyphicon glyphicon-pencil" %>
        <%= link_to ' ', participante, method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' } , class: "glyphicon glyphicon-trash" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

