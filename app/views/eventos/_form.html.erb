<%= form_for(@evento) do |f| %>
  <% if @evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h2>

      <ul>
      <% @evento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :organizador %><br>
    <%= f.text_field :organizador %>
  </div>
  <div class="field">
    <%= f.label :local %><br>
    <%= f.text_field :local %>
  </div>
  <div class="field">
    <%= f.label :"Data Inicial" %><br>
    <%= f.text_field :dataHora_inicio , class: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :"Data Final" %><br>
    <%= f.text_field :dataHora_fim , class: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :assunto %><br>
    <%= f.text_field :assunto %>
  </div>
  <div class="actions">
    <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
    <%= link_to ' Voltar', eventos_path , class: "btn btn-default " %>
  </div>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
	$('.datepicker').datepicker({format: 'dd-mm-yyyy'});
	});
</script>
